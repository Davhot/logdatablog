%h1= t('categories.index').capitalize

.col-12
  .row.tags-index
    - for category in @items do
      %span.badge.badge-pill.badge-secondary
        = category.name
        = link_to content_tag(:i, nil, class: 'fa fa-pencil'), category_path(category)
        = link_to content_tag(:i, nil, class: 'fa fa-trash'), category_path(category),
          method: :delete, data: {confirm: 'Вы уверены?'}

.col-12
  .create-btn.row
    = link_to t('categories.new'), new_category_path, class: 'btn btn-outline-secondary'
